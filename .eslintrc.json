{
	"env": {
		"browser": true,
		"es2021": true,
		"jest/globals": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"airbnb",
		"plugin:jest/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"react",
		"jsx-a11y",
		"import",
		"jest"
	],
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"rules": {
		"react/function-component-definition": [
			"error",
			{
				"namedComponents": "arrow-function"
			}
		],
		"react/jsx-filename-extension": [
			"warn",
			{
				"extensions": [
					".js",
					".jsx"
				]
			}
		],
		"class-methods-use-this": [
			"error",
			{
				"enforceForClassFields": false
			}
		],
		"no-unused-expressions": [
			"error",
			{
				"allowShortCircuit": true,
				"allowTernary": true
			}
		],
		"operator-linebreak": [
			"error",
			"after",
			{
				"overrides": {
					"?": "before",
					":": "before"
				}
			}
		]
	}
}